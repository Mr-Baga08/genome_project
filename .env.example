# ============================================================================
# üöÄ OPTION 1: DOCKER DEVELOPMENT (Recommended for quick start)
# ============================================================================
# Use this configuration when running with docker-compose up -d

ENVIRONMENT=development
DEBUG=true

# Database (Docker containers)
MONGO_USER=admin
MONGO_PASSWORD=password123
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_DB=ugene_workflows

# Redis (Docker container)  
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
REACT_APP_API_URL=http://localhost:8000

# CORS for development
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# File Storage (Docker volumes)
UPLOAD_DIR=/app/uploads
UGENE_WORKDIR=/tmp/ugene_workdir

# UGENE Settings
UGENE_IMAGE=ugene_sdk_docker_image
MAX_PARALLEL_TASKS=3
TASK_TIMEOUT=1800

# Worker Settings
MAX_WORKERS=2
WORKER_TIMEOUT=3600

# Security (development only)
SECRET_KEY=6fb54b157b669209e81ad927e427506077316f3dde2e224868691bfb1fcd2fea
SECURE_COOKIES=false

