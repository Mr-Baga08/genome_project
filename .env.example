# Environment Configuration
# .env.example
# Database Configuration
MONGO_ROOT_PASSWORD=ugeneadmin
MONGODB_URL=mongodb://admin:ugeneadmin@mongodb:27017
DATABASE_NAME=ugene_bioinformatics
INIT_DATABASE=true

# Redis Configuration
REDIS_URL=redis://redis:6379/0
CELERY_BROKER=redis://redis:6379/1
CELERY_BACKEND=redis://redis:6379/1

# Application Configuration
ENVIRONMENT=production
HOST=0.0.0.0
PORT=8000
WORKERS=4
LOG_LEVEL=info

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://your-domain.com
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,your-domain.com
SECRET_KEY=your-secret-key-change-this-in-production

# Feature Flags
ENABLE_METRICS=true
SERVE_STATIC=false
INIT_DATABASE=true

# External Services
BLAST_DB_PATH=/databases/blast
DOCKER_HOST=unix:///var/run/docker.sock

# Monitoring
GRAFANA_PASSWORD=admin
PROMETHEUS_RETENTION=15d

# SSL Configuration (optional)
SSL_CERTFILE=/etc/nginx/ssl/cert.pem
SSL_KEYFILE=/etc/nginx/ssl/key.pem

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000/ws
