# ============================================================================
# üö¢ KUBERNETES/CLOUD DEPLOYMENT
# ============================================================================
# Use this when deploying to Kubernetes or cloud platforms

ENVIRONMENT=production
DEBUG=false

# Use environment-specific service names
MONGO_HOST=ugene-mongodb-service
REDIS_HOST=ugene-redis-service

# Cloud-specific settings
MONGODB_URL=${MONGODB_CONNECTION_STRING}
REDIS_URL=${REDIS_CONNECTION_STRING}

# Load balancer settings
API_HOST=0.0.0.0
API_PORT=8000
ALLOWED_ORIGINS=${FRONTEND_URLS}

# Resource limits for containers
BACKEND_MEMORY_LIMIT=2Gi
WORKER_MEMORY_LIMIT=4Gi
MAX_WORKERS=4

# Cloud storage
CLOUD_STORAGE_ENABLED=true
AWS_BUCKET_NAME=${S3_BUCKET_NAME}
UPLOAD_DIR=/tmp/uploads

# Monitoring
PROMETHEUS_PORT=9090
METRICS_ENABLED=true
LOG_LEVEL=INFO

