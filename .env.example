# ============================================================================
# üè≠ OPTION 3: PRODUCTION DEPLOYMENT
# ============================================================================
# Use this configuration for production environments

ENVIRONMENT=production
DEBUG=false

# Production Database (use strong passwords!)
MONGO_USER=ugene_admin
MONGO_PASSWORD=YOUR_STRONG_MONGO_PASSWORD_HERE
MONGO_HOST=your-mongodb-host.com
MONGO_PORT=27017
MONGO_DB=ugene_workflows_prod

# Production Redis
REDIS_HOST=your-redis-host.com
REDIS_PORT=6379
REDIS_PASSWORD=YOUR_STRONG_REDIS_PASSWORD_HERE
REDIS_URL=redis://:YOUR_STRONG_REDIS_PASSWORD_HERE@your-redis-host.com:6379/0

# Production API
API_HOST=0.0.0.0
API_PORT=8000
REACT_APP_API_URL=https://your-domain.com/api

# Production CORS
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Security Settings
SECRET_KEY=YOUR_SUPER_SECRET_JWT_KEY_MINIMUM_32_CHARACTERS
SECURE_COOKIES=true
SSL_ENABLED=true
RATE_LIMIT_ENABLED=true

# Production File Storage
UPLOAD_DIR=/var/lib/ugene/uploads
UGENE_WORKDIR=/var/lib/ugene/workdir
LOG_FILE=/var/log/ugene/ugene_workflow.log

# Performance Settings
MAX_WORKERS=8
MAX_PARALLEL_TASKS=10
CACHE_ENABLED=true
ENABLE_GZIP=true

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30
BACKUP_ENABLED=true

